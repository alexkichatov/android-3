<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/blue_grey" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/login_intro"
                style="@style/immopolyHeading1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/user_signup_app_name"
                android:textSize="33dp" />
            <ProgressBar
                android:id="@+id/login_register_progress"
                style="@android:style/Widget.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone" />
            <Button
                android:id="@+id/login"
                style="@style/immopolyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="loginUser"
                android:text="@string/login"
                android:textSize="20dip" />
        </LinearLayout>
        <TextView
            android:id="@+id/registerOrLogin"
            style="@style/immopolyHeading2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:paddingBottom="7dip"
            android:text="@string/signup_no_agent_yet"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/registerDescription"
            style="@style/immopolyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="7dip"
            android:paddingLeft="14dip"
            android:paddingRight="14dip"
            android:text="@string/user_signup_promote_text"
            android:textStyle="bold" />
        <Button
            android:id="@+id/register"
            style="@style/immopolyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:onClick="registerUser"
            android:text="@string/register"
            android:textSize="20dip" >
        </Button>
    </LinearLayout>
</ScrollView>