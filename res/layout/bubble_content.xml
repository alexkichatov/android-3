<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="140dp"
    android:background="#FFF"
    android:clipChildren="false"
    android:padding="4dp" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/teaser_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/house" >
        </ImageView>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:id="@+id/swipe_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/swipe_right_img"
                android:layout_width="30dp"
                android:layout_height="9.3dp"
                android:gravity="center"
                android:src="@drawable/swipe_right_0" >
            </ImageView>
            <ImageView
                android:id="@+id/swipe_left_img"
                android:layout_width="30dp"
                android:layout_height="9.3dp"
                android:gravity="center"
                android:src="@drawable/swipe_left_0" >
            </ImageView>
            <ImageView
                android:id="@+id/swipe_finger"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:src="@drawable/swipefinger" >
            </ImageView>
            <TextView
                android:id="@+id/swipe_counter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="3dp"
                android:text="1/3"
                android:textColor="#888"
                android:textSize="11dp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:text="Zimmer:"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/rooms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:text="3"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="3dp"
                android:text="qm:"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/qm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:text="97"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0" >
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:text="Etage:"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/floor_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:text="EG"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
        <!-- <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"> -->
        <org.immopoly.android.widget.EllipsizingTextView
            android:id="@+id/flat_desc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:text="Beschreibung: Schöne Altbauwohnung im Herzen Berlins. Geniale Verkehrsanbindung und unüberschaubares Freizeitangebot"
            android:textColor="#000"
            android:textSize="13dp" >
        </org.immopoly.android.widget.EllipsizingTextView>
        <!-- </LinearLayout> -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingTop="3dp"
                android:text="Preis:"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:text="1399 €"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </TextView>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/goto_expo" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>