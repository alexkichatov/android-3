<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:clipChildren="false" >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <FrameLayout
            android:id="@+id/frameLayout1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <ImageView
                android:id="@+id/teaser_icon"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/loading" >
            </ImageView>
        </FrameLayout>
        <LinearLayout
            android:id="@+id/swipe_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp" >
                <ImageView
                    android:id="@+id/swipe_finger"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/swipefinger" >
                </ImageView>
                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                    <ImageView
                        android:id="@+id/swipe_right_img"
                        android:layout_width="30dp"
                        android:layout_height="7dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/swipe_right_0" >
                    </ImageView>
                    <ImageView
                        android:id="@+id/swipe_left_img"
                        android:layout_width="30dp"
                        android:layout_height="7dp"
                        android:src="@drawable/swipe_left_0" >
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/swipe_counter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="1dp"
                android:text="1/3"
                android:textColor="#888"
                android:textSize="11dp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="5dp" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="Zimmer:"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/rooms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="3dp"
                android:text="3"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/qm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:includeFontPadding="false"
                android:paddingLeft="3dp"
                android:text="97"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingLeft="2dp"
                android:text="m²"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
        <!-- <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"> -->
        <org.immopoly.android.widget.EllipsizingTextView
            android:id="@+id/flat_desc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:ellipsize="none"
            android:maxLines="2"
            android:paddingTop="1dp"
            android:text="Beschreibung: Schöne Altbauwohnung im Herzen Berlins. Geniale Verkehrsanbindung und unüberschaubares Freizeitangebot"
            android:textColor="#000"
            android:textSize="13dp" >
        </org.immopoly.android.widget.EllipsizingTextView>
        <!-- </LinearLayout> -->
        <!-- <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"></TextView> -->
        <LinearLayout
            android:id="@+id/takeover_daterow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Übernommen am:"
                android:textColor="#500"
                android:textSize="13dp" >
            </TextView>
            <TextView
                android:id="@+id/takeover_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:text="23.08.2011"
                android:textColor="#500"
                android:textSize="13dp" >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/takeover_numrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Übernahmeversuche:"
                android:textColor="#500"
                android:textSize="13dp" >
            </TextView>
            <TextView
                android:id="@+id/takeovers_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:text="3"
                android:textColor="#300"
                android:textSize="13dp" >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="Preis:"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold" >
                </TextView>
                <TextView
                    android:id="@+id/price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingTop="3dp"
                    android:text="1399 €"
                    android:textColor="#000"
                    android:textSize="15dp"
                    android:textStyle="bold" >
                </TextView>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </TextView>
            <ImageView
                android:id="@+id/old_new_marker"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:paddingRight="1dp"
                android:src="@drawable/goto_expo_red" >
            </ImageView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>