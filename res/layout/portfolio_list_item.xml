<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="2dp" >
    <ImageView
        android:id="@+id/teaser_icon"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:paddingRight="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/loading" >
    </ImageView>
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preis:"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="1399 €"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </TextView>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zimmer:"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/rooms_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:text="3"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </TextView>
            <TextView
                android:id="@+id/qm_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="97"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="m²"
                android:textColor="#000"
                android:textSize="15dp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
        <!-- <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"> -->
        <org.immopoly.android.widget.EllipsizingTextView
            android:id="@+id/flat_desc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_weight="1"
            android:duplicateParentState="true"
            android:ellipsize="none"
            android:maxLines="2"
            android:paddingTop="1dp"
            android:text="Beschreibung: Schöne Altbauwohnung im Herzen Berlins. Geniale Verkehrsanbindung und unüberschaubares Freizeitangebot"
            android:textColor="#000"
            android:textSize="13dp" >
        </org.immopoly.android.widget.EllipsizingTextView>
        <!-- </LinearLayout> -->
        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:paddingTop="2dp" >
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Übernommen am:"
                    android:textColor="#500"
                    android:textSize="13dp" >
                </TextView>
                <TextView
                    android:id="@+id/takeover_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingLeft="3dp"
                    android:paddingRight="2dp"
                    android:text="23.08.2011"
                    android:textColor="#500"
                    android:textSize="13dp" >
                </TextView>
            </TableRow>
            <TableRow
                android:id="@+id/takeover_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Übernahmeversuche:"
                    android:textColor="#500"
                    android:textSize="13dp" >
                </TextView>
                <TextView
                    android:id="@+id/takeovers_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:paddingLeft="3dp"
                    android:paddingRight="2dp"
                    android:text="3"
                    android:textColor="#300"
                    android:textSize="13dp" >
                </TextView>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>