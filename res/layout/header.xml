<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/header" android:background="@android:color/black">
	<Button android:id="@+id/header_logo" android:onClick="headerClick"
		android:background="@drawable/home_button" paddding="0dip"
		android:layout_height="wrap_content" android:layout_width="wrap_content" />
	<TextView android:id="@+id/header_location"
		android:background="@android:color/black" android:text="@string/locating_message"
		android:textSize="18dip" android:layout_width="0dip"
		android:layout_height="fill_parent" android:gravity="center"
		android:layout_weight="1" />

	<Button android:onClick="headerClick" android:id="@+id/location_refresh"
		android:background="@drawable/ic_location_button"
		android:layout_height="fill_parent" android:layout_width="wrap_content" />
	<Button android:id="@+id/help" android:background="@android:drawable/ic_menu_help"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:onClick="showInfo" />
	<!-- <AutoCompleteTextView android:id="@+id/regionsAutoComplete" android:hint="City 
		of interest" android:layout_width="fill_parent" android:layout_height="fill_parent"></AutoCompleteTextView> -->
</LinearLayout>
